apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{.AppName}}-ingress
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /
spec:
  rules:
    - host: {{.AppName}}.example.com
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: {{.AppName}}-svc
                port:
                  number: 80
