# Generated by EXO — .env.example for {{.AppName}}
# Copy this file to .env and fill in your values.
# DO NOT commit .env to version control.

# ── Application ────────────────────────────────────────────────────────────────
APP_NAME={{.AppName}}
APP_ENV=development
APP_PORT=8080
APP_SECRET_KEY=change-me-in-production

# ── Database ───────────────────────────────────────────────────────────────────
{{- if eq .DB "postgres"}}
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=admin
POSTGRES_PASSWORD=secret
POSTGRES_DB={{.AppName}}
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?sslmode=disable
{{- else if eq .DB "mysql"}}
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=admin
MYSQL_PASSWORD=secret
MYSQL_DB={{.AppName}}
DATABASE_URL=mysql://${MYSQL_USER}:${MYSQL_PASSWORD}@${MYSQL_HOST}:${MYSQL_PORT}/${MYSQL_DB}
{{- else if eq .DB "mongo"}}
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_USER=admin
MONGO_PASSWORD=secret
MONGO_DB={{.AppName}}
MONGO_URI=mongodb://${MONGO_USER}:${MONGO_PASSWORD}@${MONGO_HOST}:${MONGO_PORT}/${MONGO_DB}
{{- else if eq .DB "redis"}}
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=secret
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0
{{- else}}
# DATABASE_URL=postgres://user:password@localhost:5432/dbname
{{- end}}

# ── Cloud Provider ─────────────────────────────────────────────────────────────
{{- if eq .Provider "aws"}}
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
{{- else if eq .Provider "gcp"}}
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
{{- else if eq .Provider "azure"}}
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
{{- end}}

# ── Monitoring ─────────────────────────────────────────────────────────────────
{{- if eq .Monitoring "prometheus"}}
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin
{{- end}}

# ── Logging ────────────────────────────────────────────────────────────────────
LOG_LEVEL=info
LOG_FORMAT=json
