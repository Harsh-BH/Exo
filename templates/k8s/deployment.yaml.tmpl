apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{.AppName}}
  labels:
    app: {{.AppName}}
spec:
  replicas: 2
  selector:
    matchLabels:
      app: {{.AppName}}
  template:
    metadata:
      labels:
        app: {{.AppName}}
    spec:
      containers:
        - name: {{.AppName}}
          image: {{.AppName}}:latest
          ports:
            - containerPort: 8080
          resources:
            requests:
              memory: "64Mi"
              cpu: "250m"
            limits:
              memory: "128Mi"
              cpu: "500m"
